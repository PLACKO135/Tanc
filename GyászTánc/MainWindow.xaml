<Window x:Class="GyászTánc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GyászTánc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Férfiak" HorizontalAlignment="Center"/>
            <ListBox />

        </StackPanel>
        <StackPanel Grid.Column="2">
            <Label Content="Nők" HorizontalAlignment="Center"/>
            <ListBox/>
        </StackPanel>
        <TextBox Grid.Row="1"/>
        <TextBox Grid.Row="1" Grid.Column="2"/>

        <Button Grid.Column="1" Grid.Row="2" Content="MIX"/>
        <ListBox Grid.Column="1" Grid.Row="3" Grid.RowSpan="2"/>

    </Grid>
</Window>
